{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential",
        "plugin:vue/base",
        "plugin:vue/strongly-recommended",
        "plugin:vue/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "max-len": ["error", {
            "code": 80,
            "comments": 75,
            "ignoreTemplateLiterals": true,
            "ignoreUrls": true
        }],
        // Vue rules here
        "vue/html-closing-bracket-newline": ["error", {
            "singleline": "never",
            "multiline": "always"
        }],
        "vue/mustache-interpolation-spacing": ["error", "always"],
        "vue/script-indent": ["error", 2, {
            "baseIndent": 0,
            "switchCase": 1
        }],
        "vue/require-prop-types": [0]
    }
}
